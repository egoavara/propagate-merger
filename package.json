{
  "name": "propagate-merger",
  "version": "1.0.0",
  "description": "GitHub Action to automatically propagate changes from one branch to another",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/main.ts -o dist",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:write": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "prepare": "husky install",
    "pre-commit": "npm run check:fix && npm test",
    "pre-push": "npm run build && git add dist/ && git diff --staged --quiet || git commit -m '자동 빌드: dist 파일 업데이트'"
  },
  "keywords": [
    "github-action",
    "merge",
    "propagate",
    "automation",
    "git"
  ],
  "author": "egoavara",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@vercel/ncc": "^0.38.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=20"
  }
}